{
  "color": {
    "$type": "color",
    "base": {
      "void": { "$value": "#000000", "$description": "Pure black background" },
      "screen": { "$value": "#050808", "$description": "CRT screen background" },
      "panel": { "$value": "#0a0f0f", "$description": "Panel background" }
    },
    "border": {
      "dim": { "$value": "#0f1a1a" },
      "glow": { "$value": "#1a2f2f" }
    },
    "text": {
      "bright": { "$value": "#b0ffb0", "$description": "Primary phosphor green text" },
      "dim": { "$value": "#4a7a4a" },
      "ghost": { "$value": "#1a3a1a" }
    },
    "accent": {
      "amber": { "$value": "#ffb000" },
      "amber-dim": { "$value": "#805800" }
    },
    "semantic": {
      "danger": { "$value": "#ff3030" },
      "danger-glow": { "$value": "rgba(255, 48, 48, 0.5)" },
      "warning": { "$value": "#ff8800" },
      "warning-glow": { "$value": "rgba(255, 136, 0, 0.4)" },
      "success": { "$value": "#00ff66" },
      "success-glow": { "$value": "rgba(0, 255, 102, 0.5)" },
      "info": { "$value": "#00ddff" },
      "info-glow": { "$value": "rgba(0, 221, 255, 0.5)" },
      "neutral": { "$value": "#556655" }
    }
  },
  "typography": {
    "font-family": {
      "$type": "fontFamily",
      "mono": { "$value": ["IBM Plex Mono", "monospace"] }
    },
    "font-size": {
      "$type": "dimension",
      "xs": { "$value": "9px" },
      "sm": { "$value": "10px" },
      "base": { "$value": "11px" },
      "md": { "$value": "14px" },
      "lg": { "$value": "18px" },
      "xl": { "$value": "24px" },
      "2xl": { "$value": "32px" },
      "3xl": { "$value": "48px" }
    },
    "font-weight": {
      "$type": "fontWeight",
      "normal": { "$value": "400" },
      "medium": { "$value": "500" },
      "semibold": { "$value": "600" },
      "bold": { "$value": "700" }
    },
    "letter-spacing": {
      "$type": "dimension",
      "tight": { "$value": "0.05em" },
      "normal": { "$value": "0.1em" },
      "wide": { "$value": "0.15em" },
      "wider": { "$value": "0.2em" }
    }
  },
  "spacing": {
    "$type": "dimension",
    "xs": { "$value": "4px" },
    "sm": { "$value": "8px" },
    "md": { "$value": "16px" },
    "lg": { "$value": "24px" },
    "xl": { "$value": "32px" },
    "2xl": { "$value": "48px" },
    "3xl": { "$value": "64px" }
  },
  "border": {
    "width": {
      "$type": "dimension",
      "default": { "$value": "1px" }
    },
    "radius": {
      "$type": "dimension",
      "sm": { "$value": "2px" },
      "md": { "$value": "4px" }
    }
  },
  "animation": {
    "duration": {
      "$type": "duration",
      "fast": { "$value": "150ms" },
      "normal": { "$value": "300ms" },
      "slow": { "$value": "500ms" },
      "flicker": { "$value": "8s" },
      "scanline": { "$value": "8s" },
      "glow": { "$value": "3s" }
    }
  }
}
